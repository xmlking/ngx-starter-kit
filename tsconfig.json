{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es2018", "esnext.array"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@env-api/environment": ["apps/api/src/environments/environment.ts"],
      "@env/*": ["apps/webapp/src/environments/*"],
      "@ngx-starter-kit/admin": ["libs/admin/src/index.ts"],
      "@ngx-starter-kit/animations": ["libs/animations/src/index.ts"],
      "@ngx-starter-kit/app-confirm": ["libs/app-confirm/src/index.ts"],
      "@ngx-starter-kit/auth": ["libs/auth/src/index.ts"],
      "@ngx-starter-kit/breadcrumbs": ["libs/breadcrumbs/src/index.ts"],
      "@ngx-starter-kit/chat-box": ["libs/chat-box/src/index.ts"],
      "@ngx-starter-kit/clap": ["libs/clap/src/index.ts"],
      "@ngx-starter-kit/context-menu": ["libs/context-menu/src/index.ts"],
      "@ngx-starter-kit/core": ["libs/core/src/index.ts"],
      "@ngx-starter-kit/dashboard": ["libs/dashboard/src/index.ts"],
      "@ngx-starter-kit/draggable": ["libs/draggable/src/index.ts"],
      "@ngx-starter-kit/experiments": ["libs/experiments/src/index.ts"],
      "@ngx-starter-kit/grid": ["libs/grid/src/index.ts"],
      "@ngx-starter-kit/home": ["libs/home/src/index.ts"],
      "@ngx-starter-kit/image-comparison": ["libs/image-comparison/src/index.ts"],
      "@ngx-starter-kit/json-diff": ["libs/json-diff/src/index.ts"],
      "@ngx-starter-kit/led": ["libs/led/src/index.ts"],
      "@ngx-starter-kit/loading-overlay": ["libs/loading-overlay/src/index.ts"],
      "@ngx-starter-kit/models": ["libs/models/src/index.ts"],
      "@ngx-starter-kit/navigator": ["libs/navigator/src/index.ts"],
      "@ngx-starter-kit/ngx-utils": ["libs/ngx-utils/src/index.ts"],
      "@ngx-starter-kit/not-found": ["libs/not-found/src/index.ts"],
      "@ngx-starter-kit/notifications": ["libs/notifications/src/index.ts"],
      "@ngx-starter-kit/oidc": ["libs/oidc/src/index.ts"],
      "@ngx-starter-kit/quickpanel": ["libs/quickpanel/src/index.ts"],
      "@ngx-starter-kit/scroll-to-top": ["libs/scroll-to-top/src/index.ts"],
      "@ngx-starter-kit/scrollbar": ["libs/scrollbar/src/index.ts"],
      "@ngx-starter-kit/shared": ["libs/shared/src/index.ts"],
      "@ngx-starter-kit/sidenav": ["libs/sidenav/src/index.ts"],
      "@ngx-starter-kit/socketio-plugin": ["libs/socketio-plugin/src/index.ts"],
      "@ngx-starter-kit/svg-viewer": ["libs/svg-viewer/src/index.ts"],
      "@ngx-starter-kit/theme-picker": ["libs/theme-picker/src/index.ts"],
      "@ngx-starter-kit/toolbar": ["libs/toolbar/src/index.ts"],
      "@ngx-starter-kit/tree": ["libs/tree/src/index.ts"],
      "@ngx-starter-kit/utils": ["libs/utils/src/index.ts"],
      "@ngx-starter-kit/widgets": ["libs/widgets/src/index.ts"]
    }
  },
  "exclude": ["coverage/**/*", "dist/**/*", "node_modules", "tmp", "todo/**/*", "tools/**/_*files/**/*"]
}
